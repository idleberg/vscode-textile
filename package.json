{
    "name": "textile",
    "displayName": "Textile",
    "description": "Syntax highlighting and snippets for the Textile markup language",
    "version": "0.1.3",
    "publisher": "idleberg",
    "license": "MIT",
    "author": {
        "name": "Jan T. Sott",
        "url": "http://github.com/idleberg"
    },
    "keywords": [
        "textile"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idleberg/vscode-textile.git"
    },
    "homepage": "https://github.com/idleberg/vscode-textile",
    "bugs": {
        "url": "https://github.com/idleberg/vscode-textile/issues"
    },
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#ffeab6"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "textile",
                "aliases": [
                    "Textile",
                    "textile"
                ],
                "extensions": [
                    ".textile"
                ],
                "configuration": "./textile.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "textile",
                "scopeName": "text.html.textile",
                "path": "./syntaxes/Textile.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "textile",
                "path": "./snippets/textile.json"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "gulp lint"
    },
    "devDependencies": {
        "babel-eslint": "^7.1.1",
        "eslint": "^4.1.1",
        "gulp": "^4.0.0",
        "gulp-debug": "^3.0.0",
        "gulp-eslint": "^4.0.0",
        "gulp-jsonlint": "^1.2.0",
        "gulp-raster": "^0.2.0",
        "gulp-rename": "^1.2.2",
        "gulp-xml-validator": "^0.2.0",
        "vscode": "^1.0.3"
    }
}
