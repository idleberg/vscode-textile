{
    "name": "textile",
    "displayName": "Textile",
    "description": "Syntax highlighting and snippets for the Textile markup language",
    "version": "0.1.5",
    "publisher": "idleberg",
    "license": "MIT",
    "author": {
        "name": "Jan T. Sott",
        "url": "http://github.com/idleberg"
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "precommit": "npm run test",
        "test": "vscode-linter",
        "vscode:prepublish": "gulp"
    },
    "keywords": [
        "textile"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/idleberg/vscode-textile"
    },
    "homepage": "https://github.com/idleberg/vscode-textile#readme",
    "bugs": {
        "url": "https://github.com/idleberg/vscode-textile/issues"
    },
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#555555",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "textile",
                "aliases": [
                    "Textile",
                    "textile"
                ],
                "extensions": [
                    ".textile"
                ],
                "configuration": "./textile.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "textile",
                "scopeName": "text.html.textile",
                "path": "./syntaxes/Textile.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "textile",
                "path": "./snippets/textile.json"
            }
        ]
    },
    "devDependencies": {
        "gulp": "^4.0.2",
        "gulp-raster": "^0.2.0",
        "gulp-rename": "^1.4.0",
        "husky": "^3.1.0",
        "vscode": "^1.1.36",
        "vscode-linter": "^0.2.2"
    }
}
